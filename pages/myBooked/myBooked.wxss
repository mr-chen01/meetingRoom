/* pages/myBooked/myBooked.wxss */
page{
  background-color:#F5F5F5;
}

.none{
  height:inherit;
  display:flex;
  align-items:center;
  justify-content: center;
}

.container{
  width:750rpx;
  height:1185rpx;
  padding-top:50rpx;
  display: flex;
  flex-direction: column;
  justify-content:flex-start
}

.single{
  width: 700rpx;
  height:200rpx;
  padding-top:50rpx;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  border-radius: 20rpx;
}


.time{
  width: 200rpx;
}

.single view{
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content: center;
}

.single text{
  margin-bottom: 50rpx;
  text-align: center;
}

.body{
  width:500rpx;
}
.cancel{
  width:100rpx;
  height:80rpx;
  position: relative;
  right:20rpx;
  top:100rpx;
  font-size:small;
  background-color:#7FFFAA;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancel:active{
  background-color:#32CD32;
}

.bgstyle{
  height: 100%;
  width: 100%;
  position: fixed;
  background-color:rgba(0, 0, 0, .5);
  z-index: 2;
  top: 0;
  left: 0;
 }
.windowContainer{
  padding: 20rpx 0;
  width: 60%;
  height:35%;
  background: #ffffff;
  margin: 40% auto;
  border-radius: 20rpx;
  display: flex;
  position: relative;
  display:flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.isShow{
  display: block;
 }
 .isHide{
  display: none;
 }
.askingArea{
  width:inherit;
  height:40%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pick{
  font-size:small;
  text-align: center;
}